<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================================
         DARK THEME (Night Mode)
    ========================================= -->
    <style name="Theme.Checklist" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">#22CCE3</item>
        <item name="colorPrimaryVariant">#1BA0B3</item>
        <item name="colorOnPrimary">#000000</item>

        <!-- Secondary Colors -->0-=0
        <item name="colorSecondary">#22CCE3</item>
        <item name="colorSecondaryVariant">#1BA0B3</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background -->
        <item name="android:windowBackground">#121212</item>
        <item name="colorOnBackground">#FFFFFF</item>

        <!-- Custom Backgrounds -->
        <item name="headerBackground">#1E1E1E</item>
        <item name="listBackground">#121212</item>

        <!-- Icon Colors -->
        <item name="ic_editcolor">#22CCE3</item>
        <item name="ic_deletecolor">#FF5252</item>
        <item name="iconTintColor">#FFFFFF</item>

        <!-- Text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B0B0B0</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#000000</item>

        <!-- Date & Time Picker -->
        <item name="datePickerHeaderBg">#22CCE3</item>
        <item name="datePickerAccent">#22CCE3</item>
        <item name="datePickerButtonText">#22CCE3</item>
        <item name="timePickerHeaderBg">#22CCE3</item>
        <item name="timePickerAccent">#22CCE3</item>
        <item name="timePickerButtonText">#22CCE3</item>

        <!-- NEW: UI Elements -->
        <item name="dropdownBackground">#2C2C2C</item>
        <item name="dropdownTextColor">#FFFFFF</item>
        <item name="navigationActiveColor">#22CCE3</item>
        <item name="navigationInactiveColor">@android:color/transparent</item>
        <item name="navigationActiveTextColor">#000000</item>
        <item name="navigationInactiveTextColor">#FFFFFF</item>
        <item name="searchFieldBackground">#2C2C2C</item>
        <item name="searchFieldTextColor">#FFFFFF</item>
        <item name="searchFieldHintColor">#757575</item>
        <item name="searchFieldIconTint">#22CCE3</item>
        <item name="taskCardBackground">#1E1E1E</item>
        <item name="fabIconColor">#000000</item>
        <item name="fabBackgroundColor">#22CCE3</item>
        <item name="buttonPrimaryColor">#22CCE3</item>
        <item name="buttonSecondaryColor">#B0B0B0</item>
        <item name="recycleBinRestoreColor">#4CAF50</item>
        <item name="recycleBinDeleteColor">#FF5252</item>
        <item name="emptyStateTextColor">#757575</item>

        <!-- NEW: Settings Colors -->
        <item name="settingsMenuBackground">#2C2C2C</item>
        <item name="settingsMenuTextColor">#FFFFFF</item>
        <item name="settingsMenuIconTint">#22CCE3</item>
        <item name="settingsItemBackground">#1E1E1E</item>
        <item name="settingsItemTextColor">#FFFFFF</item>
        <item name="settingsDividerColor">#424242</item>

        <!-- Dialog Theme -->
        <item name="materialAlertDialogTheme">@style/AppDialogTheme.Dark</item>
    </style>

    <!-- Dialog Theme Dark -->
    <style name="AppDialogTheme.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">#2C2C2C</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle.Dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle.Dark</item>
    </style>

    <style name="DialogButtonStyle.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#22CCE3</item>
    </style>

    <!-- Custom Date Picker Theme Dark -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">?attr/datePickerAccent</item>
        <item name="android:colorAccent">?attr/datePickerHeaderBg</item>
        <item name="colorControlActivated">?attr/datePickerAccent</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerButtonStyle.Dark</item>
        <item name="android:background">#2C2C2C</item>
    </style>

    <style name="DatePickerButtonStyle.Dark" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/datePickerButtonText</item>
    </style>

    <!-- Custom Time Picker Theme Dark -->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">?attr/timePickerAccent</item>
        <item name="android:colorAccent">?attr/timePickerHeaderBg</item>
        <item name="colorControlActivated">?attr/timePickerAccent</item>
        <item name="android:buttonBarButtonStyle">@style/TimePickerButtonStyle.Dark</item>
        <item name="android:background">#2C2C2C</item>
    </style>

    <style name="TimePickerButtonStyle.Dark" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/timePickerButtonText</item>
    </style>

</resources>