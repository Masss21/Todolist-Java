<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/listBackground">

    <!-- ===== CONTENT (SCROLLABLE) ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/headerBackground"
            android:elevation="4dp"
            app:titleTextColor="?attr/iconTintColor"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="96dp">

                <!-- Search -->
                <EditText
                    android:id="@+id/etSearchRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Sort Dropdown -->
                <Spinner
                    android:id="@+id/spinnerSortRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>

                <!-- Recycle Bin List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecycleBin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tvEmptyBin"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="@string/empty_recycle_bin"
                    android:textSize="16sp"
                    android:textColor="?attr/emptyStateTextColor"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- ===== FLOATING BUTTON (FIXED BOTTOM) ===== -->
    <Button
        android:id="@+id/btnEmptyAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_empty_recycle_bin"
        android:textColor="?attr/recycleBinDeleteColor"
        android:backgroundTint="@android:color/transparent"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</FrameLayout>
