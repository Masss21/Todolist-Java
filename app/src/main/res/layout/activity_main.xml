<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/listBackground">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ==================== HEADER ==================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/headerBackground"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Title Row: App Name + Flag + Theme + Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- App Title + Flag -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/appTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="?attr/iconTintColor"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/flagImage"
                        android:layout_width="28dp"
                        android:layout_height="20dp"
                        android:src="@drawable/flag_id"
                        android:layout_marginStart="12dp"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:id="@+id/helloText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />
                </LinearLayout>

                <!-- Settings Icon -->
                <ImageView
                    android:id="@+id/ivSettings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings"
                    android:padding="4dp"
                    android:layout_marginEnd="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?attr/iconTintColor" />

                <!-- Theme Toggle Icon -->
                <ImageView
                    android:id="@+id/ivThemeToggle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sun"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?attr/iconTintColor" />
            </LinearLayout>

            <!-- Navigation Tabs (3 only: Todo, Progress, Complete) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnFilterTodo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_todo"
                        android:textColor="?attr/navigationActiveTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/tab_selected"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/btnFilterProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_progress"
                        android:textColor="?attr/navigationInactiveTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/tab_unselected"
                        android:layout_marginStart="12dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/btnFilterComplete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_complete"
                        android:textColor="?attr/navigationInactiveTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/tab_unselected"
                        android:layout_marginStart="12dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Filter & Search Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Filter Button (with dropdown icon) -->
                <LinearLayout
                    android:id="@+id/btnFilter"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="?attr/searchFieldBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_filter_alt"
                        app:tint="?attr/searchFieldIconTint" />

                    <TextView
                        android:id="@+id/tvFilterLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Default"
                        android:textColor="?attr/searchFieldTextColor"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â–¼"
                        android:textColor="?attr/searchFieldIconTint"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Search Button -->
                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:padding="10dp"
                    android:layout_marginStart="12dp"
                    android:background="?attr/searchFieldBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?attr/searchFieldIconTint" />
            </LinearLayout>

            <!-- Search Input Field (Hidden by default) -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="@string/search_hint"
                android:textColor="?attr/searchFieldTextColor"
                android:textColorHint="?attr/searchFieldHintColor"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/bg_search_field"
                android:visibility="gone"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

            <!-- Filter Dropdown (Hidden by default) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFilterDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/dropdownBackground"
                android:elevation="4dp"
                android:maxHeight="200dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- ==================== TASK LIST ==================== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="80dp" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/empty_tasks"
                android:textSize="16sp"
                android:textColor="?attr/emptyStateTextColor"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

    <!-- ==================== FAB ADD BUTTON ==================== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_input_add"
        app:tint="?attr/fabIconColor"
        app:backgroundTint="?attr/fabBackgroundColor"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>