<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================================
         LIGHT THEME (Base Application Theme)
    ========================================= -->
    <style name="Theme.Checklist" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">#03A9F4</item>
        <item name="colorSecondaryVariant">#0288D1</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background -->
        <item name="android:windowBackground">#F5F5F5</item>
        <item name="colorOnBackground">#212121</item>

        <!-- Custom Backgrounds -->
        <item name="headerBackground">#2196F3</item>
        <item name="listBackground">#F5F5F5</item>

        <!-- Icon Colors -->
        <item name="ic_editcolor">#1976D2</item>
        <item name="ic_deletecolor">#D32F2F</item>
        <item name="iconTintColor">#FFFFFF</item>

        <!-- Text -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#1976D2</item>

        <!-- Date & Time Picker -->
        <item name="datePickerHeaderBg">#2196F3</item>
        <item name="datePickerAccent">#2196F3</item>
        <item name="datePickerButtonText">#2196F3</item>
        <item name="timePickerHeaderBg">#2196F3</item>
        <item name="timePickerAccent">#2196F3</item>
        <item name="timePickerButtonText">#2196F3</item>

        <!-- NEW: UI Elements -->
        <item name="dropdownBackground">#FFFFFF</item>
        <item name="dropdownTextColor">#212121</item>
        <item name="navigationActiveColor">#FFFFFF</item>
        <item name="navigationInactiveColor">@android:color/transparent</item>
        <item name="navigationActiveTextColor">#2196F3</item>
        <item name="navigationInactiveTextColor">#FFFFFF</item>
        <item name="searchFieldBackground">#E3F2FD</item>
        <item name="searchFieldTextColor">#212121</item>
        <item name="searchFieldHintColor">#757575</item>
        <item name="searchFieldIconTint">#2196F3</item>
        <item name="taskCardBackground">#FFFFFF</item>
        <item name="fabIconColor">#FFFFFF</item>
        <item name="fabBackgroundColor">#2196F3</item>
        <item name="buttonPrimaryColor">#2196F3</item>
        <item name="buttonSecondaryColor">#757575</item>
        <item name="recycleBinRestoreColor">#4CAF50</item>
        <item name="recycleBinDeleteColor">#F44336</item>
        <item name="emptyStateTextColor">#9E9E9E</item>

        <!-- NEW: Settings Colors -->
        <item name="settingsMenuBackground">#FFFFFF</item>
        <item name="settingsMenuTextColor">#212121</item>
        <item name="settingsMenuIconTint">#2196F3</item>
        <item name="settingsItemBackground">#FAFAFA</item>
        <item name="settingsItemTextColor">#212121</item>
        <item name="settingsDividerColor">#E0E0E0</item>

        <!-- Dialog Theme -->
        <item name="materialAlertDialogTheme">@style/AppDialogTheme</item>
    </style>

    <!-- Dialog Theme -->
    <style name="AppDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">#212121</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#2196F3</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Checklist.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Custom Date Picker Theme -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/datePickerAccent</item>
        <item name="android:colorAccent">?attr/datePickerHeaderBg</item>
        <item name="colorControlActivated">?attr/datePickerAccent</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/datePickerButtonText</item>
    </style>

    <!-- Custom Time Picker Theme -->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/timePickerAccent</item>
        <item name="android:colorAccent">?attr/timePickerHeaderBg</item>
        <item name="colorControlActivated">?attr/timePickerAccent</item>
        <item name="android:buttonBarButtonStyle">@style/TimePickerButtonStyle</item>
    </style>

    <style name="TimePickerButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/timePickerButtonText</item>
    </style>

</resources>